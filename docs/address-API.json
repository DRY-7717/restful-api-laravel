                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    },
                    {
                        "name": "contactId",
                        "in": "path"
                    },
                    {
                        "name": "addressId",
                        "in": "path"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success delete contact address",
                        "content": {
                            "application/json": {
                                "schema": {
